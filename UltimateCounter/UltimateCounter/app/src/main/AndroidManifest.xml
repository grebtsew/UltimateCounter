<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grebtsew.app.ultimategamecounter">

    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />


    <application

        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:allowBackup="true"
        android:icon="@mipmap/ugc1"
        android:label="@string/app_name"
        android:supportsRtl="true"
                >

        <!--  -->


        <activity
            android:name="com.grebtsew.app.ultimategamecounter.Activities.SplashScreenActivity"
            android:label="Ultimate Game Counter">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.grebtsew.app.ultimategamecounter.Activities.MainActivity"
            android:label="Ultimate Game Counter">
            <intent-filter>
                <action android:name="com.coderefer.androidsplashscreenexample.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.grebtsew.app.ultimategamecounter.Activities.GameActivity" />
        <activity android:name="com.grebtsew.app.ultimategamecounter.Activities.StartGameActivity" />
    </application>

</manifest>
